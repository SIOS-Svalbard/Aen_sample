   <div id="search_multi_block" class="FrxTable" frx:block="AeN/search_multi">
       <table>
           <thead>
               <tr>
                   <th>Event Date</th>
                   <th>Station Name</th>
                   <th>Gear Type</th>
                   <th>Sample Type</th>
                   <th>Event ID</th>
                   <th>Parent Event ID</th></tr></thead>
           <tbody>
               <tr id="search_multi" frx:foreach="*">
                   <td>{eventdate}</td>
